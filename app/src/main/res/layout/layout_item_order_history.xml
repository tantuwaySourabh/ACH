<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/txt_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 MARCH,2017"
                android:textColor="@color/secondary_text_color"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-BOLD.TTF" />

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/txt_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="( 050458255 )"
                android:textColor="@color/secondary_text_color"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/medicine_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/medicine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/txt_medicine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CROCIN ADVANCE 500MG TABLET"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:edittextfont="ROBOTO-BOLD.TTF" />

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.ebabu.ach.customview.CustomTextView
                        android:id="@+id/medicine_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5 Strips / Bottle"
                        android:textColor="@color/divider_color"
                        android:textSize="12sp"
                        app:edittextfont="ROBOTO-REGULAR.TTF" />

                    <com.ebabu.ach.customview.CustomTextView
                        android:id="@+id/medicine_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="50"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        app:edittextfont="ROBOTO-BOLD.TTF" />
                </LinearLayout>

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/txt_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Pending"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/item_back_gray_color" />

        <com.ebabu.ach.customview.CustomTextView
            android:id="@+id/btn_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:text="Cancel Order"
            android:textSize="14sp"
            app:edittextfont="ROBOTO-REGULAR.TTf" />

    </LinearLayout>
</android.support.v7.widget.CardView>