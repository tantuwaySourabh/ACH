<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/expanded_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@mipmap/login_logo" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="15dp"
                android:hint="Address"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:singleLine="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />


            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/city"
                android:drawablePadding="15dp"
                android:hint="City"
                android:inputType="textEmailAddress"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />


            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_zip_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/zip_code"
                android:drawablePadding="15dp"
                android:hint="Zip Code"
                android:inputType="number"
                android:outlineProvider="none"
                android:maxLength="6"
                android:padding="13dp"
                android:singleLine="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/state"
                android:drawablePadding="15dp"
                android:hint="State"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />
            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/country"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Country"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />
