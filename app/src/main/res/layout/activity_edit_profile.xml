<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:elevation="5dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/profile_pic"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <com.ebabu.ach.customview.CustomTextView
            android:id="@+id/et_mobile_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineProvider="none"
            android:drawableLeft="@mipmap/mobile_white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:edittextfont="ROBOTO-REGULAR.TTF" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="15dp"
                android:hint="First name"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:singleLine="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/user"
                android:drawablePadding="15dp"
                android:hint="Last Name"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/email"
                android:drawablePadding="15dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/qualification"
                android:drawablePadding="15dp"
                android:editable="false"
                android:hint="Qualification"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/address"
                android:drawablePadding="15dp"
                android:hint="Address"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:singleLine="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />


            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/city"
                android:drawablePadding="15dp"
                android:hint="City"
                android:inputType="textEmailAddress"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_zip_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/zip_code"
                android:drawablePadding="15dp"
                android:hint="Zip Code"
                android:inputType="number"
                android:maxLength="6"
                android:outlineProvider="none"
                android:padding="13dp"
                android:singleLine="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/state"
                android:drawablePadding="15dp"
                android:hint="State"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />


            <com.ebabu.ach.customview.CustomEditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/country"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Country"
                android:inputType="text"
                android:outlineProvider="none"
                android:padding="13dp"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF"
                app:edittextfontHint="ROBOTO-REGULAR.TTF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/btn_upload_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableLeft="@mipmap/uploadcertificate"
                android:drawablePadding="15dp"
                android:padding="13dp"
                android:text="Upload Certificate"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />
            <ImageView
                android:id="@+id/certificate"
                android:layout_gravity="right"
                android:layout_width="45dp"
                android:layout_height="40dp"/>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/divider_color" />

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/primary_color_rounded_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="12dp"
                android:text="UPDATE"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-BOLD.TTF" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>
