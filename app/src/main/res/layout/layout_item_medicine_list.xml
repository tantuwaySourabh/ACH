<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="2dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/medicine_image"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:padding="10dp"
                android:src="@mipmap/medicine" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/medicine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CROCIN ADVANCE 500MG TABLET"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:edittextfont="ROBOTO-BOLD.TTF" />

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/medicine_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="EngineerBabu Parmaceuticals Ltd"
                    android:textColor="@color/divider_color"
                    android:textSize="12sp"
                    app:edittextfont="ROBOTO-REGULAR.TTF" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/item_back_gray_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/medicine_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Strips of 15 tablet"
                android:textColor="@color/secondary_text_color"
                android:textSize="14sp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_strike_through"
                android:text="₹ 51.91"
                android:textColor="@color/secondary_text_color"
                android:textSize="10sp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/saleprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:text="₹ 51.91"
                android:textColor="@color/green"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-BOLD.TTF" />

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/txt_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="50% off"
                android:textColor="@color/red"
                android:textSize="10sp"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/btn_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/btn_decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/gray_circle"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:edittextfont="ROBOTO-BOLD.TTF" />

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="1"
                    android:textSize="16dp" />

                <com.ebabu.ach.customview.CustomTextView
                    android:id="@+id/btn_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/gray_circle"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:edittextfont="ROBOTO-BOLD.TTF" />

            </LinearLayout>

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".5"
                android:background="@color/primaryColor"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="ADD TO CART"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:edittextfont="ROBOTO-BOLD.TTf" />

            <com.ebabu.ach.customview.CustomTextView
                android:id="@+id/txt_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Added in Cart"
                android:textColor="@color/secondary_text_color"
                android:textSize="16sp"
                android:visibility="gone"
                app:edittextfont="ROBOTO-MEDIUM.TTf" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>